<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@+id/navigation_statistics">

    <fragment
            android:id="@+id/navigation_statistics"
            android:name="com.maikeruwu.substats.ui.statistics.StatisticsFragment"
            android:label="@string/title_statistics"
            tools:layout="@layout/fragment_statistics" />

    <fragment
            android:id="@+id/navigation_statistics_most_played_songs"
            android:name="com.maikeruwu.substats.ui.statistics.list.mostPlayedSongs.MostPlayedSongsFragment"
            android:label="@string/title_most_played_songs"
            tools:layout="@layout/fragment_statistics_list" />

    <fragment
            android:id="@+id/navigation_statistics_most_played_artists"
            android:name="com.maikeruwu.substats.ui.statistics.list.mostPlayedArtists.MostPlayedArtistsFragment"
            android:label="@string/title_most_played_artists"
            tools:layout="@layout/fragment_statistics_list" />

    <fragment
            android:id="@+id/navigation_statistics_most_played_albums"
            android:name="com.maikeruwu.substats.ui.statistics.list.mostPlayedAlbums.MostPlayedAlbumsFragment"
            android:label="@string/title_most_played_albums"
            tools:layout="@layout/fragment_statistics_list" />

    <fragment
            android:id="@+id/navigation_manage"
            android:name="com.maikeruwu.substats.ui.manage.ManageFragment"
            android:label="@string/title_manage"
            tools:layout="@layout/fragment_manage" />

    <fragment
            android:id="@+id/navigation_settings"
            android:name="com.maikeruwu.substats.ui.settings.SettingsFragment"
            android:label="@string/title_settings"
            tools:layout="@layout/fragment_settings" />
</navigation>